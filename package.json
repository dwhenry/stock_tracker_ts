{
  "name": "stock-tracker",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install",
    "boot": "./scripts/boot.sh",
    "dev": "npm run dev -w web",
    "start": "npm run start -w web",
    "build": "npm run build -w web",
    "db:generate": "npm run generate -w @stock-tracker/database",
    "db:migrate": "npm run migrate -w @stock-tracker/database",
    "db:push": "npm run push -w @stock-tracker/database",
    "db:studio": "npm run studio -w @stock-tracker/database",
    "db:seed": "npm run seed -w web"
  },
  "devDependencies": {
    "typescript": "5.7.2"
  },
  "engines": {
    "node": ">=20"
  }
}
